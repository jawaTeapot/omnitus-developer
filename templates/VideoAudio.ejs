                    <%- include('cardAudio.ejs'); %>
                    <%- include('cardAudio.ejs'); %>
                </div>
            </div>
            <div class="shadow"></div>
        </div>
        <div class="VideoAudio__buttons">
            <button class="VideoAudio__btn">
                Открыть больше
                <img class="VideoAudio__btn-img" src="./img/arrow-down.svg" alt="v">
